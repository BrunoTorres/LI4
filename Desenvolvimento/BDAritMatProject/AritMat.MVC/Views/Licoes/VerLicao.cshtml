@{
    if (lvm.Video == null)
    {
        <script type="text/javascript">
    function scrollBottom() {
        $("html, body").animate({ scrollTop: $(document).height() }, 500);
    }
    function addMinutes(date, minutes) {
        return new Date(date.getTime() + minutes * 60000);
    }

    $(function() {
        var now = new Date();
        var newDate = addMinutes(now, @lvm.TempoLicao);
        var btnRep = document.getElementById("btnRepLesson");
        btnRep.style.visibility = 'hidden';
        $('div#timer').countdown(newDate).on('update.countddown', function(event) {
            /*$('div#timer').text(
                event.strftime('%M:%S'));*/
        }).on('finish.countdown', function(event) {
            @if (lvm.Imagem != null)
            {
                <text>$("#imgDiv").fadeOut();
            btnRep.style.visibility = 'visible';</text>
            }
            else
            {
                <text>$("#txtDiv").fadeOut();
            btnRep.style.visibility = 'visible';</text>
            }
            var modalText = document.getElementById("modalText");
            var modalHeader = document.getElementById("modalHeader");
            modalHeader.innerHTML = "Acabou esta lição...";
            modalText.innerHTML = "Escolhe agora o que pretendes fazer";
            $("#myModal").modal('show');
        });

    });
</script>
    }
}
<script>
    var player;

    function onYouTubeIframeAPIReady() {
        //var exer = jQuery("#exercicio").hide();
        var btnRep = document.getElementById("btnRepLesson");
        btnRep.style.visibility = 'hidden';
        
        player = new YT.Player('playerDiv', {
            height: '390',
            width: '640',
            videoId: '@lvm.Video',
            events: {
                'onReady': onPlayerReady,
                'onStateChange': onPlayerStateChange
            }
        });
    }

    function onPlayerReady(event) {
        event.target.playVideo();
    }

    // when video ends
    function onPlayerStateChange(event) {
        if (event.data === 0) {
            jQuery("#videoDiv").fadeOut();
            document.getElementById("btnRepLesson").style.visibility = 'visible';
            var modalText = document.getElementById("modalText");
            var modalHeader = document.getElementById("modalHeader");
            modalHeader.innerHTML = "Acabou a lição...";
            modalText.innerHTML = "Escolhe agora o que pretendes fazer";
            $("#myModal").modal('show');
        }
    }

    function apresentaExercicio() {
        window.location = "@Url.Action("Resolver","Exercicios", new { id = ViewBag.Exercicio })";
    }

    function nextExplicacao() {
        window.location = "@Url.Action("VerLicao","Licoes", new { id = @lvm.IdLicao, exp = @lvm.NumExpl+1 })";
    };

    function avancarLicao() {
        // bad code -.-
        window.location = "@Url.Action("VerLicao","Licoes", new { id = @lvm.IdLicao+1, exp = 1 })";
    };

    function repetirLicao() {
        @if (lvm.Imagem != null)
        {
            <text>$("#imgDiv").show();</text>
        }
        else if (lvm.Video != null)
        {
            <text>$("#videoDiv").show();</text>
        }
        else
        {
            <text>$("#txtDiv").show();</text>
        }
    };

</script>
