<!-- Page Content -->
<div id="page-wrapper">
<div class="container-fluid">
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lição @lvm.IdLicao - @lvm.Area</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
    <div class="row container">
        <div class="col-lg-8">
            @{
                if (lvm.Video == null && lvm.Imagem == null)
                {

                    <div class="panel panel-default" id="txtDiv">
                        <div class="panel-body">
                            <div id="timer">
                                <!--<p> <span id="minutes"></span> Minutes </p><div class="space">:</div><p> <span id="seconds"></span> Seconds </p>-->
                            </div>
                            <div class="panel-heading">
                                <label>@lvm.Texto</label>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                }
                else if (lvm.Imagem != null)
                {
                    <div class="panel panel-default" id="imgDiv">
                        <div id="timer">
                            <!--<p> <span id="minutes"></span> Minutes </p><div class="space">:</div><p> <span id="seconds"></span> Seconds </p>-->
                        </div>
                        <div class="panel-heading">
                            <i class="fa fa-video-camera fa-fw"></i> Lição @lvm.IdLicao
                        </div>
                        <!-- /.panel-heading -->

                        <div class="panel-body">
                            <h3>Lição</h3>
                            <img class="img-responsive center-block" src="@Url.Content("~/Images/Licoes/L" + lvm.IdLicao + "E" + lvm.NumExpl + ".png")">
                        </div>
                    </div>
                }
                else
                {
                    <script src="https://www.youtube.com/iframe_api"></script>

                    <div class="panel panel-default" id="videoDiv">
                        <div class="panel-heading">
                            <i class="fa fa-video-camera fa-fw"></i> Lição @lvm.IdLicao
                        </div>
                        <!-- /.panel-heading -->

                        <div class="panel-body">
                            <div class="embed-responsive embed-responsive-16by9">
                                <div id="playerDiv"></div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <br/>


                }
            }
            <!-- /.row -->

            <div class="panel panel-default" id="opcoes">
                <div class="panel-heading">
                    <i class="fa fa-edit fa-fw"></i> Percebeste a Lição?
                </div>
                <!-- /.panel-heading -->

                <div class="panel-body">
                    <br/><br/>
                    <div class="form-inline text-center">
                        <input type="button" class="btn-two btn" onclick=" apresentaExercicio() " value="Sim, quero fazer um exercício!"/>&nbsp;&nbsp;&nbsp;
                        <input type="button" id="btnNextExpl" class="btn-two btn" onclick=" nextExplicacao() " value="Não, preciso de outra explicação!"/>&nbsp;&nbsp;&nbsp;
                        <br/><br/><input type="button" id="btnNextLesson" class="btn-two btn" onclick=" avancarLicao() " value="Quero avançar para a próxima lição!"/>&nbsp;&nbsp;&nbsp;
                        <input type="button" id="btnRepLesson" class="btn-two btn" onclick=" repetirLicao() " value="Quero ver esta lição outra vez!" />&nbsp;&nbsp;&nbsp;
                    </div>
                    <script type="text/javascript">
                        jQuery.post("@Url.Action("ProximaExplicacao")", { licao: @lvm.IdLicao, numExpl: @lvm.NumExpl },
                        function(data) {
                            var json = JSON.parse(data);
                            if (json.OQueFazer !== @LicaoDAO.PROX_EXPLICACAO) {
                                var btnNextExp = document.getElementById("btnNextExpl");
                                btnNextExp.style.visibility = 'hidden';
                            }
                        });
                        jQuery.post("@Url.Action("ProximaLicao")", { licao: @lvm.IdLicao, numExpl: @lvm.NumExpl },
                        function(data) {
                            var json = JSON.parse(data);
                            if (json.OQueFazer !== @LicaoDAO.PROX_LICAO) {
                                var btnNextLesson = document.getElementById("btnNextLesson");
                                btnNextLesson.style.visibility = 'hidden';
                            }
                        });
                    </script>
                </div>
            </div>
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title" id="modalHeader"></h4>
                        </div>
                        <div class="modal-body">
                            <p id="modalText"></p>
                        </div>
                        <div class="modal-footer">
                            <button id="btnOK" type="button" class="btn btn-info" data-dismiss="modal">OK</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
