@model AritMat.MVC.Models.ViewModels.AlunoDetailsModel
@{
    ViewBag.Title = "Ver Detalhes";
}

<body>

    <div class="container">
        <div class="row">
            <h2>Informações</h2>
            <div class="col-md-8">
                @using (Html.BeginForm("Details", "Alunos", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>A tua conta</h4>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdAluno)
                        @Html.HiddenFor(model => model.Username)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Nome, new {htmlAttributes = new {@class = "form-control"}})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DataNasc, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.DataNasc, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.Tema, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.Tema, new {htmlAttributes = new {@class = "form-control"}})

                            </div>
                        </div>
                        <fieldset disabled>
                            <div class="form-group">
                                <div class="nice-checkbox">
                                    <label class="checkbox-inline">&nbsp;&nbsp;&nbsp;&nbsp;@Html.CheckBoxFor(model => model.Explicacao)</label>
                                    @Html.LabelFor(model => model.Explicacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="nice-checkbox">
                                    <label class="checkbox-inline">&nbsp;&nbsp;&nbsp;&nbsp;@Html.CheckBoxFor(model => model.Dica)</label>
                                    @Html.LabelFor(model => model.Dica, htmlAttributes: new {@class = "control-label col-md-2"})
                                </div>
                            </div>
                        </fieldset>
                        <br />
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>

<script type='text/javascript' src='~/Scripts/fancybox/jquery.fancybox.pack.js'></script>

<script type='text/javascript' src='~/Scripts/jquery.mobile.customized.min.js'></script>
<script type='text/javascript' src='~/Scripts/jquery.easing.1.3.js'></script>
<script type='text/javascript' src='~/Scripts/camera.min.js'></script>
<script src="~/Scripts/bootstrap.min.js"></script>

</body>